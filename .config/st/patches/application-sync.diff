diff --git a/st.c b/st.c
index 0ce6ac2..d53b882 100644
--- a/st.c
+++ b/st.c
@@ -232,6 +232,33 @@ static uchar utfmask[UTF_SIZ + 1] = {0xC0, 0x80, 0xE0, 0xF0, 0xF8};

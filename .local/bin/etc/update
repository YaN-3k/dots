#!/bin/sh

ping -q -c 1 1.1.1.1 > /dev/null || {
	notify-send  "âŒ Error, you are offline." "Check your internet connection."
	exit 1
}

package=$(pacman -Quq | wc -l)

if [ ! "$package" -eq 0 ]; then
	notify-send "ğŸ”½ Updating..."
	if sudo pacman --noconfirm -Syu; then
		notify-send "âœ… Updating completed!" "$package packages have been updated."
	else
		notify-send -u critical "âŒ Error downloading updates." "Check your internet connection, if pacman is already running, or run update manually to see errors."
		exit 1
	fi
else
	notify-send "There is nothing to update."
fi
